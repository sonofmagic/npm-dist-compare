.el-steps {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}
.el-steps--simple {
  padding: 13px 8%;
  background: #f5f7fa;
  border-radius: 4px;
}
.el-steps--horizontal {
  white-space: nowrap;
}
.el-steps--vertical {
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-flow: column;
  flex-flow: column;
  height: 100%;
}
