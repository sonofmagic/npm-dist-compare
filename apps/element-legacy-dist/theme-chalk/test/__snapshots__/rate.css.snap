.el-rate {
  height: 20px;
  line-height: 1;
}
.el-rate:focus,
.el-rate:active {
  outline-width: 0;
}
.el-rate__item {
  position: relative;
  display: inline-block;
  font-size: 0;
  vertical-align: middle;
}
.el-rate__icon {
  position: relative;
  display: inline-block;
  margin-right: 6px;
  font-size: 18px;
  color: #c0c4cc;
  -webkit-transition: 0.3s;
  transition: 0.3s;
}
.el-rate__icon.hover {
  -webkit-transform: scale(1.15);
  transform: scale(1.15);
}
.el-rate__icon .path2 {
  position: absolute;
  top: 0;
  left: 0;
}
.el-rate__decimal {
  position: absolute;
  top: 0;
  left: 0;
  display: inline-block;
  overflow: hidden;
}
.el-rate__text {
  font-size: 14px;
  vertical-align: middle;
}
